function respondToUser(text) {
    let response = "¬°Qu√© buena pregunta! Para eso mejor contacta a nuestro equipo humano en la secci√≥n de Contacto.";
    const lowerText = text.toLowerCase();

    // Respuestas din√°micas basadas en tus archivos
    if (lowerText.includes("quienes") || lowerText.includes("equipo")) {
        response = `Somos el ${siteData.squadName}. Nuestro miembro estrella es ${siteData.member}.`; [cite: 1]
    } 
    else if (lowerText.includes("poderes") || lowerText.includes("que hace")) {
        response = `${siteData.member} tiene habilidades de ${siteData.powers.join(" y ")}.`; [cite: 1]
    }
    else if (lowerText.includes("hola")) {
        response = "¬°Hola! Bienvenido a Lively Cake. ¬øQuieres saber sobre nuestro equipo o nuestros servicios?";
    }
    else if (lowerText.includes("misi√≥n")) {
        response = "Nuestra misi√≥n es: Explore a space and spread your creativity.";
    }

